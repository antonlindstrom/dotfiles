Config { font = "xft:Inconsolata:size=10:antialias=true,FontAwesome:size=10",
       , additionalFonts = []
       , bgColor = "black"
       , fgColor = "grey"
       , alpha = 200
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    -- cpu activity monitor
                    , Run MultiCpu [ "--template", "CPU: <total>%" ] 20
                    -- memory usage monitor
                    , Run Memory [ "--template", "Mem: <usedratio>%" ] 20
                    -- battery status
                    , Run Com "battery-status" [] "battery" 60
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " <fc=red></fc> %StdinReader% }\
                    \{  %multicpu%  %memory%  Battery: %battery% | <fc=#657b83> %date%</fc> "
       }
