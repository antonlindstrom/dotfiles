bindsym $mod+minus scratchpad show

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# media keys
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-volume 0 +5%; pactl set-sink-volume 1 +5%"
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-volume 0 -5%; pactl set-sink-volume 1 -5%"
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute 0 toggle; pactl set-sink-mute 1 toggle"
bindsym XF86AudioMicMute exec pactl set-source-mute 1 toggle

bindsym XF86AudioPlay exec --no-startup-id playerctl play
bindsym XF86AudioPause exec --no-startup-id playerctl pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-

bindsym XF86Display exec --no-startup-id mons -o # only primary

# monitor modes
set $mode_monitor Monitor modes (1) primary, (2) secondary, (3) mirror, (4) duplicate, (w) reset wallpaper
mode "$mode_monitor" {
	bindsym 1 exec --no-startup-id mons -o
	bindsym 2 exec --no-startup-id mons -s
	bindsym 3 exec --no-startup-id mons -m
	bindsym 4 exec --no-startup-id mons -d

	bindsym w exec --no-startup-id betterlockscreen -w

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+shift+m mode "$mode_monitor"

# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# Pressing left will shrink the window’s width.
	# Pressing right will grow the window’s width.
	# Pressing up will shrink the window’s height.
	# Pressing down will grow the window’s height.
	bindsym j resize shrink width 10 px or 10 ppt
	bindsym k resize grow height 10 px or 10 ppt
	bindsym l resize shrink height 10 px or 10 ppt
	bindsym semicolon resize grow width 10 px or 10 ppt

	# same bindings, but for the arrow keys
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# music control (volume, spotify etc).
set $mode_music Music (j) vol down, (k) vol up , (m) mute, (i) mic toggle, (p) pause, (n) next track, (b) previous track
mode "$mode_music" {
	bindsym k exec --no-startup-id "pactl set-sink-volume 0 +5%; pactl set-sink-volume 1 +5%"
	bindsym j exec --no-startup-id "pactl set-sink-volume 0 -5%; pactl set-sink-volume 1 -5%"
	bindsym m exec --no-startup-id "pactl set-sink-mute 0 toggle; pactl set-sink-mute 1 toggle"
	bindsym i exec --no-startup-id "pactl set-source-mute 0 toggle; pactl set-source-mute 1 toggle"

	bindsym p exec --no-startup-id "playerctl --player=spotify play-pause"
	bindsym n exec --no-startup-id "playerctl --player=spotify next"
	bindsym b exec --no-startup-id "playerctl --player=spotify previous"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+m mode "$mode_music"

# Locker is i3lock.
set $Locker betterlockscreen --lock

# power management, requires polkit.
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
	bindsym l exec --no-startup-id $Locker, mode "default"
	bindsym e exec --no-startup-id i3-msg exit, mode "default"
	bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
	bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
	bindsym r exec --no-startup-id systemctl reboot, mode "default"
	bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+shift+e mode "$mode_system"

set $mode_brightness Brightness (j) down, (k) up, (n) DP-1-1 night mode, (d) DP-1-1 dimmed, (b) DP-1-1 bright
mode "$mode_brightness" {
	bindsym j exec --no-startup-id brightnessctl set 10%-
	bindsym k exec --no-startup-id brightnessctl set +10%

	bindsym n exec --no-startup-id xrandr --output DP-1-1 --brightness 0.4
	bindsym d exec --no-startup-id xrandr --output DP-1-1 --brightness 0.7
	bindsym b exec --no-startup-id xrandr --output DP-1-1 --brightness 1.0

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+F1 mode "$mode_brightness"

# scrots
set $mode_printscr Print screen (p) screen, (s) selection, (f) focused
mode "$mode_printscr" {
	bindsym p exec --no-startup-id sleep 0.2 && scrot -e 'notify-send -u normal \"Screenshot saved\" \"$f\"'
	bindsym f exec --no-startup-id sleep 0.2 && scrot -u -e 'notify-send -u normal \"Screenshot of focused window saved\" \"$f\"'
	bindsym s exec --no-startup-id sleep 0.2 && scrot -s -e 'notify-send -u normal \"Screenshot of selection saved\" \"$f\"'

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym Shift+Print mode "$mode_printscr"

# Rebind keyboard.
bindsym Pause exec --no-startup-id setxkbmap -option caps:escape se && xset r rate 300 80 && notify-send -u normal \"setxkbmap se\" \"now set to se\"

# Locking
bindsym $mod+Escape exec $Locker


#  A bar, you mod4 for showing.
bar {
	status_command i3status -c $HOME/.config/i3/i3bar.conf
	position bottom

	tray_padding 4

	font pango:Inconsolata, FontAwesome 10
	separator_symbol "|"

	colors {
		background #2E3440
	}
}

