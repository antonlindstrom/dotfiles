for_window [class="(?i)mpv"] floating enable
for_window [class="(?i)pinentry"] floating enable
for_window [class="(?i)zenity"] floating enable
for_window [class="(?i)xclock"] floating enable
for_window [class="(?i)corebird"] floating enable

# placement rules
for_window [class="(?i)slack"] move window to workspace 3
for_window [class="(?i)spotify"] move window to workspace $ws_music
for_window [class="(?i)plexmediaplayer"] move window to workspace $ws_music

# assign placement rules
assign [class="^qutebrowser$"] → 2

exec --no-startup-id "caffeine &"
exec --no-startup-id "xset s 180 120"
exec --no-startup-id "xss-lock -n /usr/share/doc/xss-lock/dim-screen.sh -- betterlockscreen --lock &"
exec --no-startup-id "betterlockscreen -w"
exec --no-startup-id "setxkbmap -option caps:escape se"

# get i3 events and publish them with notifyd, make sure to kill it also.
exec_always --no-startup-id "killall i3events; /usr/bin/i3events"
