# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# Pressing left will shrink the window’s width.
	# Pressing right will grow the window’s width.
	# Pressing up will shrink the window’s height.
	# Pressing down will grow the window’s height.
	bindsym j resize shrink width 10 px or 10 ppt
	bindsym k resize grow height 10 px or 10 ppt
	bindsym l resize shrink height 10 px or 10 ppt
	bindsym semicolon resize grow width 10 px or 10 ppt

	# same bindings, but for the arrow keys
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# music control (volume, spotify etc).
mode "music" {
	bindsym k exec --no-startup-id pactl set-sink-volume 0 +5%
	bindsym j exec --no-startup-id pactl set-sink-volume 0 -5%
	bindsym m exec --no-startup-id pactl set-sink-mute 0 toggle

	bindsym p exec --no-startup-id "playerctl --player=spotify play-pause", mode "default"
	bindsym n exec --no-startup-id "playerctl --player=spotify next", mode "default"
	bindsym b exec --no-startup-id "playerctl --player=spotify previous", mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+m mode "music"

# Locker is i3lock.
set $Locker i3lock -c 01696C

# power management, requires polkit.
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
	bindsym l exec --no-startup-id $Locker, mode "default"
	bindsym e exec --no-startup-id i3-msg exit, mode "default"
	bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
	bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
	bindsym r exec --no-startup-id systemctl reboot, mode "default"
	bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

#bindsym $mod+Pause mode "$mode_system"
bindsym $mod+Shift+x mode "$mode_system"

set $mode_brightness Brightness (j) , (k) 
mode "$mode_brightness" {
	bindsym j exec --no-startup-id brightnessctl set 15%-
	bindsym k exec --no-startup-id brightnessctl set +15%

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+F1 mode "$mode_brightness"

# Screen management
set $mode_screenmgmt Screen management
mode "$mode_screenmgmt" {
	set $internal DP-2-1
	set $external eDP-1

	bindsym 1 exec --no-startup-id xrandr --output "DP-2-1" --off --output "eDP-1" --auto, mode "default"
	bindsym 2 exec --no-startup-id xrandr --output "eDP-1" --off --output "DP-2-1" --auto, mode "default"
	bindsym 3 exec --no-startup-id xrandr --output "eDP-1" --auto --output "DP-2-1" --auto, mode "default"

	bindsym 4 exec --no-startup-id autorandr -l only-desktop
	bindsym 5 exec --no-startup-id autorandr -l laptop-only

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+F2 mode "$mode_screenmgmt"

# Rebind keyboard.
bindsym Pause exec --no-startup-id setxkbmap se && notify-send -u normal \"setxkbmap\" \"now set to se\"

# Locking
bindsym $mod+Escape exec --no-startup-id $Locker

# scrots
bindsym Print exec --no-startup-id scrot --focused -e 'notify-send -u normal \"Screenshot saved\" \"$f\"'
bindsym Shift+Print exec --no-startup-id sleep 0.3; scrot --select -e 'notify-send -u normal \"Screenshot saved\" \"$f\"'

# floating rules
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="(?i)gimp"] floating enable
for_window [class="(?i)steam"] floating enable
for_window [class="(?i)mpv"] floating enable
for_window [class="(?i)pinentry"] floating enable
for_window [class="(?i)zenity"] floating enable

# placement rules
for_window [class="(?i)qutebrowser"] move window to workspace 2
for_window [class="(?i)slack"] move window to workspace 3
for_window [class="(?i)spotify"] move window to workspace 8

