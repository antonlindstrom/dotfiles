# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# Pressing left will shrink the window’s width.
	# Pressing right will grow the window’s width.
	# Pressing up will shrink the window’s height.
	# Pressing down will grow the window’s height.
	bindsym j resize shrink width 10 px or 10 ppt
	bindsym k resize grow height 10 px or 10 ppt
	bindsym l resize shrink height 10 px or 10 ppt
	bindsym semicolon resize grow width 10 px or 10 ppt

	# same bindings, but for the arrow keys
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"; exec killall i3-nagbar
	bindsym Escape mode "default"; exec killall i3-nagbar
}

bindsym $mod+r mode "resize"; exec "i3-nagbar -t warning -f Inconsolata -m 'Mode: resize'"

# music control (volume, spotify etc).
mode "music" {
	bindsym k exec --no-startup-id pactl set-sink-volume 0 +5%
	bindsym j exec --no-startup-id pactl set-sink-volume 0 -5%
	bindsym m exec --no-startup-id pactl set-sink-mute 0 toggle

	bindsym p exec --no-startup-id "playerctl --player=spotify play-pause", mode "default"
	bindsym n exec --no-startup-id "playerctl --player=spotify next", mode "default"
	bindsym b exec --no-startup-id "playerctl --player=spotify previous", mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"; exec killall i3-nagbar
	bindsym Escape mode "default"; exec killall i3-nagbar
}

bindsym $mod+m mode "music"; exec "i3-nagbar -t warning -f Inconsolata -m 'Music (j) vol down, (k) vol up , (m) mute, (p) pause, (n) next, (b) back'"

# Locker is i3lock.
set $Locker i3lock -c BF616A -f

# power management, requires polkit.
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
	bindsym l exec --no-startup-id $Locker, mode "default"
	bindsym e exec --no-startup-id i3-msg exit, mode "default"
	bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
	bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
	bindsym r exec --no-startup-id systemctl reboot, mode "default"
	bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"; exec killall i3-nagbar
	bindsym Escape mode "default"; exec killall i3-nagbar
}

bindsym $mod+shift+e mode "$mode_system"; exec "i3-nagbar -f Inconsolata -m 'System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown'"

set $mode_brightness Brightness (j) , (k) 
mode "$mode_brightness" {
	bindsym j exec --no-startup-id brightnessctl set 15%-
	bindsym k exec --no-startup-id brightnessctl set +15%

	# back to normal: Enter or Escape
	bindsym Return mode "default"; exec killall i3-nagbar
	bindsym Escape mode "default"; exec killall i3-nagbar
}

bindsym $mod+F1 mode "$mode_brightness"; exec "i3-nagbar -m 'Brightness (j) down, (k) up '"

# Rebind keyboard.
bindsym Pause exec --no-startup-id setxkbmap -option caps:escape se && xset r rate 300 80 && notify-send -u normal \"setxkbmap se\" \"now set to se\"

# Locking
bindsym $mod+Escape exec $Locker

# scrots
set $mode_printscr Print screen (p) screen, (s) selection, (f) focused
mode "$mode_printscr" {
	bindsym p exec --no-startup-id sleep 0.2 && scrot -e 'notify-send -u normal \"Screenshot saved\" \"$f\"'
	bindsym f exec --no-startup-id sleep 0.2 && scrot -u -e 'notify-send -u normal \"Screenshot of focused window saved\" \"$f\"'
	bindsym s exec --no-startup-id sleep 0.2 && scrot -s -e 'notify-send -u normal \"Screenshot of selection saved\" \"$f\"'

	# back to normal: Enter or Escape
	bindsym Return mode "default"; exec killall i3-nagbar
	bindsym Escape mode "default"; exec killall i3-nagbar
}

bindsym Shift+Print mode "$mode_printscr"; exec "i3-nagbar -f Inconsolata -t warning -m 'Print screen (p) screen, (s) selection, (w) window'"

