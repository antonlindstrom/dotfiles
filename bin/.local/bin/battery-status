#!/bin/bash

shopt -s nullglob

sum() { cat "$@" | awk '{ sum += $0 } END { print sum }'; }

any_is_charging() {
    cat /sys/class/power_supply/BAT*/status | grep -q Charging
}

check_battery() {
    ls /sys/class/power_supply | grep -q BAT
    if [ $? != 0 ]; then
        echo "N/A"
        exit 0
    fi
}

check_battery_icon() {
    ls /sys/class/power_supply | grep -q BAT
    if [ $? != 0 ]; then
        echo ""
        exit 0
    fi
}

print_battery_percentage() {
    full=$(sum /sys/class/power_supply/BAT*/{charge,energy}_full)
    now=$(sum /sys/class/power_supply/BAT*/{charge,energy}_now)
    perc=$(( now * 100 / full ))

    echo "${perc}%"
}

print_battery_icon() {
    full=$(sum /sys/class/power_supply/BAT*/{charge,energy}_full)
    now=$(sum /sys/class/power_supply/BAT*/{charge,energy}_now)
    perc=$(( now * 100 / full ))

    if any_is_charging; then
        echo ""
        exit 0
    fi

    if [ $(echo "${perc} > 85" | bc) = 1 ]; then
        echo ""
        exit 0
    fi

    if [ $(echo "${perc} > 60" | bc) = 1 ]; then
        echo ""
        exit 0
    fi

    if [ $(echo "${perc} > 40" | bc) = 1 ]; then
        echo ""
        exit 0
    fi

    if [ $(echo "${perc} > 20" | bc) = 1 ]; then
        echo ""
        exit 0
    fi

    if [ $(echo "${perc} > 7" | bc) = 1 ]; then
        echo ""
        exit 0
    fi

    echo ""
}

if [ "$1" = "--icon" ]; then
    check_battery_icon
    print_battery_icon
    exit 1
fi


check_battery
print_battery_percentage
